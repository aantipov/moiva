{
  "name": "moiva",
  "version": "1.0.3",
  "private": true,
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "dev": "echo 'To be implemented. For now, use `pr \"/^preview:pure$|^watch$/\"`'",
    "watch": "nodemon -e astro,ts,vue,json --watch ./src --exec 'astro build'",
    "build": "pnpm run typecheck && astro build",
    "build:pure": "astro build",
    "build-old": "vitest run && vue-tsc --noEmit && vite build",
    "preview": "astro build && wrangler pages dev ./dist --kv=aiPkgDescription --kv=CACHE_KV --kv=AI_COMPARE_KV",
    "preview:pure": "sleep 15 && wrangler pages dev ./dist --kv=aiPkgDescription --kv=CACHE_KV --kv=AI_COMPARE_KV",
    "publish": "astro build && wrangler pages deploy ./dist",
    "test": "vitest run && pnpm run typecheck && pnpm run lint && prettier --check src/.",
    "lint": "eslint --ext .ts,.js,.vue src/ && prettier --check src/.",
    "typecheck": "astro check && vue-tsc --noEmit",
    "format": "prettier --write --plugin-search-dir=. src/.",
    "update": "pnpx npm-upgrade check",
    "logs": "wrangler pages deployment tail --project-name=moiva --environment=production",
    "logs:preview": "wrangler pages deployment tail --project-name=moiva --environment=preview",
    "blog:dev": "vitepress dev blog",
    "blog:build": "vitepress build blog",
    "blog:serve": "vitepress serve blog --port 5002",
    "blog:move": "mkdir ./dist/blog && mv ./blog/.vitepress/dist/* ./dist/blog",
    "blog:ci": "pnpm run blog:build && pnpm run blog:move"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^6.6.2",
    "@astrojs/tailwind": "^4.0.0",
    "@astrojs/vue": "^2.2.1",
    "@nanostores/vue": "^0.10.0",
    "@sentry/node": "^7.60.0",
    "@sentry/tracing": "^7.60.0",
    "@sentry/vue": "^7.60.0",
    "@tailwindcss/typography": "^0.5.9",
    "@vueuse/core": "^10.2.1",
    "astro": "^2.9.2",
    "autocompleter": "^6.1.3",
    "axios": "^1.4.0",
    "chart.js": "^4.3.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "flexsearch": "^0.7.21",
    "google-trends-api": "^4.9.2",
    "nanoid": "^4.0.2",
    "nanostores": "^0.9.3",
    "openai-edge": "^1.2.2",
    "ramda": "^0.29.0",
    "reading-time": "^1.5.0",
    "sweetalert2": "^11.7.20",
    "tippy.js": "^6.3.7",
    "vue": "^3.3.4",
    "vue-query": "^1.26.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230717.1",
    "@netlify/functions": "^0.10.0",
    "@types/node": "^20.4.4",
    "@types/ramda": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-vue": "^9.15.1",
    "gray-matter": "^4.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.11.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.1.6",
    "vitepress": "^0.22.4",
    "vitest": "^0.33.0",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.8.6",
    "wrangler": "^3.3.0",
    "zx": "^7.2.3"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
