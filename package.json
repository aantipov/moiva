{
  "name": "moiva",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && pnpm run blog:ci",
    "build-old": "vite-jest && vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5001",
    "test": "vite-jest && vue-tsc --noEmit && pnpm run lint && prettier --check src/.",
    "lint": "eslint --ext .ts,.js,.vue src/ && prettier --check src/.",
    "typecheck": "vue-tsc --noEmit",
    "format": "prettier --write src/.",
    "update": "pnpx npm-upgrade check",
    "blog:dev": "vitepress dev blog",
    "blog:build": "vitepress build blog",
    "blog:serve": "vitepress serve blog --port 5002",
    "blog:move": "mkdir ./dist/blog && mv ./blog/.vitepress/dist/* ./dist/blog",
    "blog:ci": "pnpm run blog:build && pnpm run blog:move"
  },
  "dependencies": {
    "@sentry/node": "^7.53.1",
    "@sentry/tracing": "^7.53.1",
    "@sentry/vue": "^7.53.1",
    "@tailwindcss/typography": "^0.5.0",
    "@vueuse/core": "^7.4.1",
    "@vueuse/shared": "^7.4.1",
    "autocompleter": "^6.1.2",
    "axios": "^0.24.0",
    "chart.js": "^3.7.0",
    "chartjs-adapter-date-fns": "^2.0.0",
    "date-fns": "^2.27.0",
    "flexsearch": "^0.7.21",
    "google-trends-api": "^4.9.2",
    "nanoid": "^3.1.30",
    "ramda": "^0.27.1",
    "reading-time": "^1.5.0",
    "sweetalert2": "^11.3.0",
    "tippy.js": "^6.3.7",
    "vue": "^3.2.26",
    "vue-query": "^1.19.0"
  },
  "devDependencies": {
    "@netlify/functions": "^0.10.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^20.2.5",
    "@types/ramda": "^0.27.62",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/eslint-config-typescript": "^10.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.2.0",
    "gray-matter": "^4.0.3",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.3",
    "tailwindcss": "^3.0.7",
    "typescript": "~4.5.4",
    "vite": "^2.7.7",
    "vite-jest": "^0.1.4",
    "vitepress": "^0.21.4",
    "vue-eslint-parser": "^8.0.1",
    "vue-tsc": "^0.30.0"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "public/index.html",
        "options": {
          "printWidth": 200
        }
      },
      {
        "files": "*.json",
        "options": {
          "printWidth": 120
        }
      },
      {
        "files": "src/data/readings.json",
        "options": {
          "printWidth": 200
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
