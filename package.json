{
  "name": "moiva",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite-jest && vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vite-jest && vue-tsc --noEmit && eslint --ext .ts,.js,.vue src/ && prettier --check src/.",
    "format": "prettier --write src/.",
    "update": "npx npm-upgrade check"
  },
  "dependencies": {
    "@sentry/browser": "^6.6.0",
    "@sentry/integrations": "^6.6.0",
    "@sentry/node": "^6.6.0",
    "@sentry/tracing": "^6.6.0",
    "@tailwindcss/typography": "^0.4.1",
    "autocompleter": "^6.1.0",
    "axios": "^0.21.1",
    "chart.js": "^3.4.1",
    "chartjs-adapter-date-fns": "^2.0.0",
    "date-fns": "^2.22.1",
    "flexsearch": "^0.7.2",
    "google-trends-api": "^4.9.2",
    "nanoid": "^3.1.23",
    "ramda": "^0.27.1",
    "sweetalert2": "^11.0.17",
    "tippy.js": "^6.3.1",
    "vue": "^3.1.1"
  },
  "devDependencies": {
    "@netlify/functions": "^0.7.2",
    "@types/jest": "^26.0.24",
    "@types/ramda": "^0.27.40",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@vitejs/plugin-vue": "^1.2.3",
    "@vue/compiler-sfc": "^3.1.1",
    "@vue/eslint-config-typescript": "^7.0.0",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.11.1",
    "fibers": "^5.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.1",
    "tailwindcss": "^2.2.4",
    "typescript": "~4.3.2",
    "vite": "^2.3.7",
    "vite-jest": "^0.0.3",
    "vue-eslint-parser": "^7.6.0",
    "vue-tsc": "^0.1.7"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2020": true,
      "browser": true,
      "node": true
    },
    "parser": "vue-eslint-parser",
    "plugins": [
      "vue",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@vue/typescript",
      "plugin:@typescript-eslint/recommended",
      "plugin:vue/recommended",
      "prettier"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "no-sparse-arrays": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/*.spec.{j,t}s?(x)",
          "src/main.spec.ts",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "public/index.html",
        "options": {
          "printWidth": 200
        }
      },
      {
        "files": "*.json",
        "options": {
          "printWidth": 120
        }
      },
      {
        "files": "src/data/readings.json",
        "options": {
          "printWidth": 200
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
