{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "types", "@cloudflare/workers-types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "exclude": ["node_modules", "src/components/report/*", "scripts/*", "api/gtrends.ts", "functions/**/*", "public/**/*"]
}
